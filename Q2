wrt=input('Enter text to write to the file:')
file1=open('output.txt','w')
file1.write(wrt)
file1.close()
print('Data successfully written to output.txt. \n \n')

apd=input('Enter additional text to append:')
file2=open('output.txt','a')
file2.write(apd)
file2.close()
print('Data successfully appended. \n \n')

print('Final content of the file output.txt:')
file3=open('output.txt','r')
print(file3.read())
file3.close()
